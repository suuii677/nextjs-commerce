        let cart = [];

        // Render smartphone products
        function renderSmartphoneProducts() {
            const smartphoneContainer = document.getElementById('smartphone-products');
            try {
                smartphoneContainer.innerHTML = products
                    .filter(product => product.category === 'smartphone')
                    .map(product => `
                        <div class="bg-gray-800 p-6 rounded-xl shadow-lg product-card">
                            <img src="${product.image}" onerror="console.error('Image failed to load for ${product.name}:', this.src); this.src='${product.fallback}'" alt="${product.name}" class="product-img mb-4 rounded-lg">
                            <h3 class="text-xl font-semibold text-blue-300">${product.name}</h3>
                            <p class="text-gray-400 mb-4">$${product.price.toFixed(2)}</p>
                            <a href="${product.affiliateLink}" target="_blank" rel="noopener noreferrer" onclick="addToCart(${product.id}, '${product.affiliateLink}')" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-2 rounded-full hover:from-blue-600 hover:to-purple-700 transition w-full text-center">Add to Cart</a>
                        </div>
                    `).join('');
                console.log('Smartphone products rendered successfully');
            } catch (error) {
                console.error('Error rendering smartphone products:', error);
            }
        }

        // Render audio products
        function renderAudioProducts() {
            const audioContainer = document.getElementById('audio-products');
            try {
                audioContainer.innerHTML = products
                    .filter(product => product.category === 'audio')
                    .map(product => `
                        <div class="bg-gray-800 p-6 rounded-xl shadow-lg product-card">
                            <img src="${product.image}" onerror="console.error('Image failed to load for ${product.name}:', this.src); this.src='${product.fallback}'" alt="${product.name}" class="product-img mb-4 rounded-lg">
                            <h3 class="text-xl font-semibold text-blue-300">${product.name}</h3>
                            <p class="text-gray-400 mb-4">$${product.price.toFixed(2)}</p>
                            <a href="${product.affiliateLink}" target="_blank" rel="noopener noreferrer" onclick="addToCart(${product.id}, '${product.affiliateLink}')" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-2 rounded-full hover:from-blue-600 hover:to-purple-700 transition w-full text-center">Add to Cart</a>
                        </div>
                    `).join('');
                console.log('Audio products rendered successfully');
            } catch (error) {
                console.error('Error rendering audio products:', error);
            }
        }

        // Render PC and console products
        function renderPCConsoleProducts() {
            const pcConsoleContainer = document.getElementById('pc-console-products');
            try {
                pcConsoleContainer.innerHTML = products
                    .filter(product => product.category === 'pc-console')
                    .map(product => `
                        <div class="bg-gray-800 p-6 rounded-xl shadow-lg product-card">
                            <img src="${product.image}" onerror="console.error('Image failed to load for ${product.name}:', this.src); this.src='${product.fallback}'" alt="${product.name}" class="product-img mb-4 rounded-lg">
                            <h3 class="text-xl font-semibold text-blue-300">${product.name}</h3>
                            <p class="text-gray-400 mb-4">$${product.price.toFixed(2)}</p>
                            <a href="${product.affiliateLink}" target="_blank" rel="noopener noreferrer" onclick="addToCart(${product.id}, '${product.affiliateLink}')" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-2 rounded-full hover:from-blue-600 hover:to-purple-700 transition w-full text-center">Add to Cart</a>
                        </div>
                    `).join('');
                console.log('PC/console products rendered successfully');
            } catch (error) {
                console.error('Error rendering PC/console products:', error);
            }
        }

        // Render AI recommendations
        function renderRecommendations() {
            const recommendationContainer = document.getElementById('recommendations');
            try {
                const recommended = products.slice(0, 4); // Mock: recommend first four products
                recommendationContainer.innerHTML = recommended.map(product => `
                    <div class="bg-gray-800 p-6 rounded-xl shadow-lg product-card">
                        <img src="${product.image}" onerror="console.error('Image failed to load for ${product.name}:', this.src); this.src='${product.fallback}'" alt="${product.name}" class="product-img mb-4 rounded-lg">
                        <h3 class="text-xl font-semibold text-blue-300">${product.name}</h3>
                        <p class="text-gray-400 mb-4">$${product.price.toFixed(2)}</p>
                        <a href="${product.affiliateLink}" target="_blank" rel="noopener noreferrer" onclick="addToCart(${product.id}, '${product.affiliateLink}')" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-2 rounded-full hover:from-blue-600 hover:to-purple-700 transition w-full text-center">Add to Cart</a>
                </div>
            `).join('');
                console.log('Recommendations rendered successfully');
            } catch (error) {
                console.error('Error rendering recommendations:', error);
            }
        }

        // Add to cart with redirect
        function addToCart(productId, affiliateLink) {
            try {
                const product = products.find(p => p.id === productId);
                if (!product) {
                    console.error(`Product with ID ${productId} not found`);
                    return;
                }
                cart.push(product);
                updateCart();
                window.open(affiliateLink, '_blank');
                console.log(`Redirecting to ${affiliateLink}`);
            } catch (error) {
                console.error('Error in addToCart:', error);
            }
        }

        // Update cart display
        function updateCart() {
            try {
                const cartCount = document.getElementById('cart-count');
                const cartItems = document.getElementById('cart-items');
                const cartTotal = document.getElementById('cart-total');
                cartCount.textContent = cart.length;
                cartItems.innerHTML = cart.map(item => `
                    <div class="flex justify-between mb-4 text-gray-300">
                        <span>${item.name}</span>
                        <span>$${item.price.toFixed(2)}</span>
                    </div>
                `).join('');
                const total = cart.reduce((sum, item) => sum + item.price, 0);
                cartTotal.textContent = total.toFixed(2);
                console.log('Cart updated successfully');
            } catch (error) {
                console.error('Error updating cart:', error);
            }
        }

        // Cart modal toggle with animation
        try {
            const cartModal = document.getElementById('cart-modal');
            document.getElementById('cart-button').addEventListener('click', () => {
                cartModal.classList.remove('hidden');
                const modalContent = cartModal.querySelector('div');
                modalContent.classList.add('modal-enter-active');
                setTimeout(() => modalContent.classList.remove('modal-enter-active'), 300);
                console.log('Cart modal opened');
            });
            document.getElementById('close-cart').addEventListener('click', () => {
                cartModal.classList.add('hidden');
                console.log('Cart modal closed');
            });
        } catch (error) {
            console.error('Error setting up cart modal:', error);
        }

        // Initialize
        try {
            renderSmartphoneProducts();
            renderAudioProducts();
            renderPCConsoleProducts();
            renderRecommendations();
            console.log('Page initialized successfully');
        } catch (error) {
            console.error('Initialization error:', error);
        }
    </script>
